{
  "name": "rest-api",
  "version": "0.1.0",
  "bin": {
    "rest-api": "bin/rest-api.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "lint": "eslint .",
    "local:build": "cdk synth RestApi --no-staging > template.yaml",
    "local:docker": "docker-compose -f ./.docker/local.yaml up -d",
    "local:start-api": "sam local start-api -n ./test/local.env.json --docker-network postgres",
    "local:start-api-no-pull": "npm run local:start-api -- --skip-pull-image",
    "local": "npm run local:docker && npm run local:build && npm run local:start-api",
    "dev": "npm run local:docker && npm run local:build && npm run local:start-api-no-pull"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.67.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "aws-cdk": "1.67.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.5.3",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "prettier": "^2.1.2",
    "sequelize": "^6.3.5",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "^1.67.0",
    "@aws-cdk/aws-apigatewayv2": "^1.67.0",
    "@aws-cdk/aws-cloudfront": "^1.67.0",
    "@aws-cdk/aws-cloudfront-origins": "^1.67.0",
    "@aws-cdk/aws-ec2": "^1.67.0",
    "@aws-cdk/aws-iam": "^1.67.0",
    "@aws-cdk/aws-lambda": "^1.67.0",
    "@aws-cdk/aws-lambda-event-sources": "^1.67.0",
    "@aws-cdk/aws-lambda-nodejs": "^1.67.0",
    "@aws-cdk/aws-rds": "^1.67.0",
    "@aws-cdk/aws-s3": "^1.67.0",
    "@aws-cdk/aws-s3-deployment": "^1.67.0",
    "@aws-cdk/aws-secretsmanager": "^1.67.0",
    "@aws-cdk/aws-sns": "^1.67.0",
    "@aws-cdk/aws-sqs": "^1.67.0",
    "@aws-cdk/aws-ssm": "^1.67.0",
    "@aws-cdk/core": "^1.67.0",
    "@jaystack/sls-core": "0.0.1-alpha.10",
    "@jaystack/sls-sequelize-pg": "0.0.1-alpha.10",
    "@types/aws-lambda": "^8.10.64",
    "source-map-support": "^0.5.19"
  },
  "targets": {
    "cdk-lambda": {
      "context": "node",
      "includeNodeModules": {
        "aws-sdk": false,
        "pg": false,
        "pg-hstore": false,
        "sequelize": false
      },
      "sourceMap": false,
      "minify": false,
      "engines": {
        "node": ">= 12"
      }
    }
  }
}
